{
    "printWidth": 100,
    "semi": true,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "always",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "proseWrap": "never",
    "quoteProps": "as-needed",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.json5",
          "*.config",
          ".eslintrc",
          ".prettierrc"
        ],
        "options": {
          "parser": "json"
        }
      },
      {
        "files": "*.md",
        "options": {
          "proseWrap": "always"
        }
      }
    ]
  }